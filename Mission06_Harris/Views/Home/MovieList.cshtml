@model List<MovieForm>

<h2 class="mb-3">Movie Collection</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
    <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Category ID</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Copied To Plex</th>
        <th>Actions</th>   <!-- NEW COLUMN -->
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Year</td>
            <td>@movie.CategoryId</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@movie.Edited</td>
            <td>@movie.CopiedToPlex</td>
            <td>
                <a asp-action="Edit"
                   asp-route-id="@movie.MovieId"
                   class="btn btn-warning btn-sm">
                    Edit
                </a>

                <a asp-action="Delete"
                   asp-route-id="@movie.MovieId"
                   class="btn btn-danger btn-sm">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>